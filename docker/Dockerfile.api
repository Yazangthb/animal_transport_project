FROM python:3.10-slim

WORKDIR /app

RUN apt-get update && apt-get install -y git && \
    rm -rf /var/lib/apt/lists/*

COPY docker/requirements_cpu.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

COPY src /app/src
COPY models /app/models

ENV VLM_MODEL_PATH="/app/models/qwen2.5-vl-7b-instruct.gguf"
ENV REASONING_MODEL_PATH="/app/models/qwen2.5-7b-instruct.gguf"

EXPOSE 8000

CMD ["uvicorn", "src.animal_transport.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
